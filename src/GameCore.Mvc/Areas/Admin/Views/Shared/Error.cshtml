@model ErrorViewModel
@{
    ViewData["Title"] = "錯誤";
}

<!-- 管理後台錯誤頁面內容 -->
<div class="gc-py-8">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="gc-card gc-p-6">
                <!-- 錯誤圖標 -->
                <div class="gc-mb-6">
                    <i class="bi bi-shield-exclamation gc-text-error" style="font-size: 5rem;"></i>
                </div>
                
                <!-- 錯誤標題 -->
                <h1 class="gc-text-3xl gc-font-bold gc-text-neutral-800 gc-mb-4">
                    管理後台錯誤
                </h1>
                
                <!-- 錯誤訊息 -->
                @if (Model.ShowRequestId)
                {
                    <div class="gc-alert gc-alert-error gc-mb-4">
                        <strong>錯誤 ID:</strong> <code>@Model.RequestId</code>
                    </div>
                }
                
                <p class="gc-text-lg gc-text-neutral-600 gc-mb-6">
                    管理後台發生錯誤，請檢查您的權限或聯絡系統管理員。
                </p>
                
                <!-- 建議操作 -->
                <div class="gc-card gc-p-4 gc-bg-neutral-50 gc-mb-6">
                    <h3 class="gc-text-lg gc-font-semibold gc-text-neutral-800 gc-mb-3">
                        建議操作：
                    </h3>
                    <ul class="gc-text-neutral-600 gc-text-left">
                        <li class="gc-mb-2">• 確認您有適當的管理權限</li>
                        <li class="gc-mb-2">• 檢查登入狀態</li>
                        <li class="gc-mb-2">• 重新整理頁面</li>
                        <li class="gc-mb-0">• 聯絡系統管理員</li>
                    </ul>
                </div>
                
                <!-- 操作按鈕 -->
                <div class="gc-mb-4">
                    <a href="/Admin/Dashboard" class="gc-btn gc-btn-primary gc-mr-3">
                        <i class="bi bi-speedometer2 gc-mr-2"></i>
                        返回儀表板
                    </a>
                    <a href="/" class="gc-btn gc-btn-secondary">
                        <i class="bi bi-house-door gc-mr-2"></i>
                        返回前台
                    </a>
                </div>
                
                <!-- 聯絡支援 -->
                <div class="gc-text-sm gc-text-neutral-500">
                    如果問題持續發生，請聯絡系統管理員：
                    <a href="mailto:admin@gamecore.com" class="gc-link">admin@gamecore.com</a>
                </div>
            </div>
        </div>
    </div>
</div> 