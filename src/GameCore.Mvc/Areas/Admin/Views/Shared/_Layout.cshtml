        }
        
        .gc-admin-dropdown-divider {
            border: none;
            border-top: 1px solid var(--gc-line);
            margin: var(--gc-space-2) var(--gc-space-4);
        }
        
        /* Ë°åÂ?Ë£ùÁΩÆ?ÆÁΩ© */
        .gc-admin-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(var(--gc-blur));
            z-index: var(--gc-z-modal);
            opacity: 0;
            visibility: hidden;
            transition: all var(--gc-transition-base) var(--gc-ease-in-out);
        }
        
        .gc-admin-overlay.show {
            opacity: 1;
            visibility: visible;
        }
        
        /* ?øÊ?ÂºèË®≠Ë®?*/
        @@media (max-width: 1024px) {
            .gc-admin-stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @@media (max-width: 768px) {
            .gc-admin-sidebar {
                transform: translateX(-100%);
            }
            
            .gc-admin-sidebar.expanded {
                transform: translateX(0);
            }
            
            .gc-admin-main {
                margin-left: 0;
            }
            
            .gc-admin-content {
                margin: var(--gc-space-2);
                padding: var(--gc-space-4);
            }
            
            .gc-admin-stats-grid {
                grid-template-columns: 1fr;
            }
            
            .gc-admin-overlay.show {
                opacity: 1;
                visibility: visible;
            }
        }
        
        @@media (max-width: 480px) {
            .gc-admin-content {
                margin: var(--gc-space-1);
                padding: var(--gc-space-3);
            }
            
            .gc-admin-card {
                padding: var(--gc-space-4);
            }
            
            .gc-admin-stat-card {
                padding: var(--gc-space-4);
            }
        }
        
        /* Ê∑±Ëâ≤Ê®°Â??ØÊè¥ */
        @@media (prefers-color-scheme: dark) {
            .gc-admin-body {
                background:
                    radial-gradient(900px 500px at -10% -10%, rgba(117, 87, 255, 0.15), transparent 60%),
                    radial-gradient(800px 460px at 110% 10%, rgba(52, 210, 255, 0.15), transparent 50%),
                    linear-gradient(180deg, var(--gc-bg-dark), var(--gc-bg2-dark));
            }
        }
        
        /* È´òÂ?ÊØîÊ®°ÂºèÊîØ??*/
        @@media (prefers-contrast: high) {
            .gc-admin-sidebar {
                border-right: 2px solid var(--gc-line);
            }
            
            .gc-admin-header {
                border-bottom: 2px solid var(--gc-line);
            }
            
            .gc-admin-nav-link:hover,
            .gc-admin-dropdown-item:hover {
                outline: 2px solid var(--gc-accent);
