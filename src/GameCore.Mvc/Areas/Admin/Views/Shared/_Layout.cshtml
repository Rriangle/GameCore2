            .gc-admin-main,
            .gc-admin-dropdown-menu {
                transition: opacity var(--gc-transition-base) var(--gc-ease-in-out);
            }
        }
    </style>
    
    <!-- ?™Ë?Ê®???ÄÂ°?-->
    @await RenderSectionAsync("Styles", required: false)
