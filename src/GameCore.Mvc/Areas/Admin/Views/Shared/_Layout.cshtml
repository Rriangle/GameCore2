    <!-- ÁÆ°Á?ÂæåÂè∞Â∞àÁî®?≥Êú¨ -->
    <script>
        // ?¥È?Ê¨ÑÂ??õÂ???
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.querySelector('.gc-admin-main');
            const overlay = document.getElementById('adminOverlay');
            
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('expanded');
            overlay.classList.toggle('show');
        });
        
        // ÈªûÊ??ÆÁΩ©?úÈ??¥È?Ê¨?
        document.getElementById('adminOverlay').addEventListener('click', function() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.querySelector('.gc-admin-main');
            const overlay = document.getElementById('adminOverlay');
            
            sidebar.classList.add('collapsed');
            main.classList.add('expanded');
            overlay.classList.remove('show');
        });
        
        // ?øÊ?ÂºèÂÅ¥?äÊ?
        function handleResize() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.querySelector('.gc-admin-main');
            const overlay = document.getElementById('adminOverlay');
            
            if (window.innerWidth <= 768) {
                sidebar.classList.add('collapsed');
                main.classList.add('expanded');
                overlay.classList.remove('show');
            } else {
                sidebar.classList.remove('collapsed');
                main.classList.remove('expanded');
                overlay.classList.remove('show');
            }
        }
        
        // ??ÅΩË¶ñÁ?Â§ßÂ?ËÆäÂ?
        window.addEventListener('resize', handleResize);
        
        // ?ùÂ???
        handleResize();
        
        // ?°È?Á§ôÂ??ΩÂ?Âº?
        document.addEventListener('DOMContentLoaded', function() {
            // ?∫Ê??âÊ??ïÊ∑ª?†ÈÅ©?∂Á? ARIA Ê®ôÁ±§
            const buttons = document.querySelectorAll('button:not([aria-label]):not([aria-labelledby])');
            buttons.forEach(button => {
                if (button.textContent.trim()) {
                    button.setAttribute('aria-label', button.textContent.trim());
                }
            });
            
            // ?∫Ê??âÈÄ??Ê∑ªÂ??©Áï∂??ARIA Ê®ôÁ±§
            const links = document.querySelectorAll('a:not([aria-label]):not([aria-labelledby])');
            links.forEach(link => {
                if (link.textContent.trim() && !link.querySelector('img')) {
                    link.setAttribute('aria-label', link.textContent.trim());
                }
            });
            
            // ?µÁõ§Â∞éËà™?ØÊè¥
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    const sidebar = document.getElementById('adminSidebar');
                    const overlay = document.getElementById('adminOverlay');
                    
                    if (!sidebar.classList.contains('collapsed')) {
                        sidebar.classList.add('collapsed');
                        document.querySelector('.gc-admin-main').classList.add('expanded');
                        overlay.classList.remove('show');
                    }
                }
            });
        });
    </script>
    
    <!-- ?ÅÈù¢?πÂ??≥Êú¨ -->
    @await RenderSectionAsync("Scripts", required: false)
