# =============================================================================
# GameCore 環境變數範例檔案
# =============================================================================
# 
# 使用說明：
# 1. 複製此檔案為 .env：cp env.sample .env
# 2. 編輯 .env 檔案，填入實際值
# 3. 不要將 .env 檔案提交到版本控制
# 4. 生產環境使用 Azure Key Vault 或環境變數
#
# 注意：所有密鑰和敏感資訊都應該使用安全的密鑰管理服務
# =============================================================================

# =============================================================================
# 資料庫連線設定
# =============================================================================

# 主要資料庫連線字串
# 本地開發：使用 LocalDB 或 Docker SQL Server
# 雲端環境：使用 Azure SQL Database 或其他雲端資料庫
DATABASE_CONNECTION_STRING="Server=(localdb)\\mssqllocaldb;Database=GameCore;Trusted_Connection=true;MultipleActiveResultSets=true"

# 資料庫連線設定 (可選，用於覆蓋連線字串中的設定)
DATABASE_SERVER="(localdb)\\mssqllocaldb"
DATABASE_NAME="GameCore"
DATABASE_USER=""
DATABASE_PASSWORD=""
DATABASE_TRUST_SERVER_CERTIFICATE="true"
DATABASE_MULTIPLE_ACTIVE_RESULT_SETS="true"
DATABASE_COMMAND_TIMEOUT="30"
DATABASE_CONNECTION_TIMEOUT="15"

# Redis 快取連線
# 本地開發：localhost:6379
# 雲端環境：Azure Redis Cache 或其他雲端快取服務
REDIS_CONNECTION_STRING="localhost:6379"
REDIS_PASSWORD=""
REDIS_DATABASE="0"
REDIS_ABORT_CONNECT="false"

# =============================================================================
# JWT 認證設定
# =============================================================================

# JWT 密鑰 (至少 32 字元，生產環境使用 Azure Key Vault)
JWT_SECRET_KEY="your-super-secret-key-with-at-least-32-characters-for-development-only"
JWT_ISSUER="GameCore"
JWT_AUDIENCE="GameCoreUsers"
JWT_EXPIRATION_HOURS="24"
JWT_REFRESH_TOKEN_EXPIRATION_DAYS="7"

# =============================================================================
# 應用程式設定
# =============================================================================

# ASP.NET Core 環境
ASPNETCORE_ENVIRONMENT="Development"
ASPNETCORE_URLS="http://localhost:5000;https://localhost:5001"

# 應用程式設定
APP_NAME="GameCore"
APP_VERSION="1.0.0"
APP_DESCRIPTION="遊戲社群平台"
APP_AUTHOR="GameCore Team"

# 日誌設定
LOG_LEVEL="Information"
LOG_FILE_PATH="logs/gamecore-api-.txt"
LOG_RETENTION_DAYS="30"
LOG_MAX_FILE_SIZE_MB="100"

# 效能設定
MAX_CONCURRENT_REQUESTS="100"
REQUEST_TIMEOUT_SECONDS="30"
CACHE_TIMEOUT_MINUTES="15"

# =============================================================================
# 前端設定
# =============================================================================

# API 基礎 URL
VITE_API_BASE_URL="http://localhost:5000"
VITE_APP_TITLE="GameCore"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="遊戲社群平台"

# 前端功能開關
VITE_ENABLE_DEBUG_MODE="true"
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_SENTRY="false"

# =============================================================================
# CORS 設定
# =============================================================================

# 允許的來源 (用逗號分隔)
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://localhost:3000"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_ALLOW_CREDENTIALS="true"
CORS_MAX_AGE_SECONDS="86400"

# =============================================================================
# 外部服務設定
# =============================================================================

# Azure 服務 (雲端環境)
AZURE_TENANT_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
AZURE_SUBSCRIPTION_ID=""

# 第三方 API (遊戲資料、支付等)
STEAM_API_KEY=""
DISCORD_BOT_TOKEN=""
PAYMENT_GATEWAY_KEY=""

# 郵件服務
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_ENABLE_SSL="true"

# =============================================================================
# 監控與分析
# =============================================================================

# Application Insights (Azure 監控)
APPINSIGHTS_INSTRUMENTATIONKEY=""
APPINSIGHTS_CONNECTION_STRING=""

# Sentry (錯誤追蹤)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# 健康檢查設定
HEALTH_CHECK_TIMEOUT_SECONDS="10"
HEALTH_CHECK_INTERVAL_SECONDS="30"

# =============================================================================
# 安全性設定
# =============================================================================

# 密碼政策
PASSWORD_MIN_LENGTH="8"
PASSWORD_REQUIRE_UPPERCASE="true"
PASSWORD_REQUIRE_LOWERCASE="true"
PASSWORD_REQUIRE_DIGIT="true"
PASSWORD_REQUIRE_SPECIAL_CHAR="true"

# 登入嘗試限制
MAX_LOGIN_ATTEMPTS="5"
LOGIN_LOCKOUT_DURATION_MINUTES="15"

# 檔案上傳限制
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_EXTENSIONS="jpg,jpeg,png,gif,pdf,doc,docx"
UPLOAD_PATH="uploads"

# =============================================================================
# 遊戲相關設定
# =============================================================================

# 遊戲熱度更新頻率 (分鐘)
GAME_HEAT_UPDATE_INTERVAL="30"

# 寵物系統設定
PET_MAX_LEVEL="100"
PET_EXPERIENCE_MULTIPLIER="1.0"
PET_FEEDING_INTERVAL_HOURS="6"

# 商城設定
MARKETPLACE_COMMISSION_RATE="0.05"
MARKETPLACE_MIN_TRANSACTION_AMOUNT="1.00"
MARKETPLACE_MAX_TRANSACTION_AMOUNT="10000.00"

# =============================================================================
# 開發與測試設定
# =============================================================================

# 測試資料庫
TEST_DATABASE_CONNECTION_STRING="Server=(localdb)\\mssqllocaldb;Database=GameCore_Test;Trusted_Connection=true;MultipleActiveResultSets=true"

# 假資料設定
SEED_DATA_ENABLED="true"
SEED_DATA_COUNT="100"

# 開發工具
SWAGGER_ENABLED="true"
SWAGGER_TITLE="GameCore API"
SWAGGER_DESCRIPTION="GameCore 遊戲平台 API 文件"

# =============================================================================
# 部署設定
# =============================================================================

# Docker 設定
DOCKER_REGISTRY=""
DOCKER_IMAGE_TAG="latest"
DOCKER_BUILD_CONTEXT="."

# 部署環境
DEPLOYMENT_ENVIRONMENT="local"
DEPLOYMENT_REGION=""
DEPLOYMENT_VERSION=""

# =============================================================================
# 注意事項
# =============================================================================
#
# 1. 生產環境請使用 Azure Key Vault 或環境變數管理敏感資訊
# 2. 定期輪換密鑰和憑證
# 3. 使用強密碼和適當的權限設定
# 4. 監控和記錄所有敏感操作
# 5. 定期備份資料庫和設定檔案
#
# =============================================================================
